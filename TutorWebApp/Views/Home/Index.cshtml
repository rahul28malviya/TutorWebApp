@{
    ViewBag.Title = "Home Page";
}

<!DOCTYPE html>

<html>
<head runat="server">
    <title>Tutor</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
</head>
<body ng-app="myModule" ng-controller="myController">
    <div class="form-group">
        <button type="button" class="btn btn-success" data-target="#addTutor" data-toggle="modal"><i class="fa fa-plus"> </i> Add New</button>
    </div>

    <div class="form-group">
        <label>Search:</label>
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text"><i class="fa fa-search"></i></span>
            </div>
            <input type="text" class="form-control " placeholder="Search Tutor" ng-model="searchText" />
        </div>
    </div>

    <table class="table table-bordered table-condensed table-hover table-responsive">
        <thead>
            <tr>
                <td>Name</td>
                <td>Email</td>
                <td>Topics</td>
                <td>Price</td>
                <td>Action</td>
            </tr>
        </thead>
        <tr ng-repeat="t in tutor | filter:searchText">
            <td>{{t.Name}}</td>
            <td>{{t.Email}}</td>
            <td>{{t.Topics}}</td>
            <td>{{t.Price}}</td>
            <td>
                <button type="button" class="btn btn-default" data-target="#editTutor" data-toggle="modal" ng-click="Get(t.Id)"><i class="fa fa-edit"></i>Edit</button>
                <button type="button" class="btn btn-danger" ng-click="Delete(t.Id)"><i class="fa fa-trash"></i>Remove</button>
            </td>
        </tr>
    </table>
    <div id="addTutor" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">×</button>
                    <h4 class="modal-title">Add Detail</h4>
                </div>
                <div class="modal-body">
                    <input type="hidden" class="form-control" ng-model="Tutor.Id">
                    <div class="form-group">
                        <label for="email">Email :</label>
                        <input type="email" class="form-control" ng-model="Tutor.Email" maxlength="50">
                    </div>
                    <div class="form-group">
                        <label for="firstName">Name :</label>
                        <input type="text" class="form-control" ng-model="Tutor.Name" maxlength="100">
                    </div>
                    <div class="form-group">
                        <label for="lastName">Topics :</label>
                        <input type="text" class="form-control" ng-model="Tutor.Topics" maxlength="100">
                    </div>
                    <div class="form-group">
                        <label for="phone">Price :</label>
                        <input type="text" class="form-control" ng-model="Tutor.Price" maxlength="10">
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal"><i class="fa fa-close"></i> Close</button>
                    <button type="submit" class="btn btn-success" ng-click="savedata()"><i class="fa fa-save"></i> Submit</button>
                </div>
            </div>
        </div>
    </div>

    <div id="editTutor" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">×</button>
                    <h4 class="modal-title">Edit Detail</h4>
                </div>
                <div class="modal-body">
                    <input type="hidden" class="form-control" ng-model="Tutor.Id">
                    <input type="hidden" class="form-control" ng-model="Tutor.Email">
                    <div class="form-group">
                        <label for="firstName">Name :</label>
                        <input type="text" class="form-control" ng-model="Tutor.Name" maxlength="100">
                    </div>
                    <div class="form-group">
                        <label for="lastName">Topics :</label>
                        <input type="text" class="form-control" ng-model="Tutor.Topics" maxlength="100">
                    </div>
                    <div class="form-group">
                        <label for="phone">Price :</label>
                        <input type="text" class="form-control" ng-model="Tutor.Price" maxlength="10">
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal"><i class="fa fa-close"></i> Close</button>
                    <button type="submit" class="btn btn-success" ng-click="savedata()"><i class="fa fa-save"></i> Submit</button>
                </div>
            </div>
        </div>
    </div>
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/AppService/CRUDController.js"></script>
</body>
</html>